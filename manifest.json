{
  "manifest_version": 3,
  "name": "QR Code Helper",
  "description": "A powerful QR code generation and scanning tool",
  "version": "1.1.2",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/assets/icon16.png",
      "48": "/assets/icon48.png",
      "128": "/assets/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "/assets/icon16.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "assets/jsQR.js",
        "assets/picker.iife.js"
      ]
    }
  ]
}
