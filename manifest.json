{
  "manifest_version": 3,
  "name": "QR Code 助手",
  "description": "一个强大的二维码生成和识别工具",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/assets/icon16.png",
      "48": "/assets/icon48.png",
      "128": "/assets/icon128.png"
    }
  },
  "permissions": ["activeTab", "storage", "tabs"],
  "icons": {
    "16": "/assets/icon16.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/picker.ts"]
    }
  ]
}
